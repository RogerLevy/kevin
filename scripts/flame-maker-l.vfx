require scripts\flame.vfx

class: flame-maker-l
    actor derive
    prop kids
class;

: *flame  flame one dup [[ left fac ! ]] ;

flame-maker-l :: init
    flame.ts 0 tile h| bmp !  
    act>
        bmp off 
        kids @ 0= if  2.0 passed? -exit  me 0 0 from *flame kids !  then 
        kids @ if  kids @ flame is? not if 0 kids ! then  then ;
